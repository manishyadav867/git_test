    <webLinks>
        <fullName>Add_Bundle</fullName>
        <availability>online</availability>
        <description>Add Bundle and/or Products to an Opportunity.</description>
        <displayType>massActionButton</displayType>
        <linkType>javascript</linkType>
        <masterLabel>Add Bundle/Products</masterLabel>
        <openType>onClickJavaScript</openType>
        <protected>false</protected>
        <requireRowSelection>false</requireRowSelection>
        <url>{!REQUIRESCRIPT(&quot;/soap/ajax/25.0/connection.js&quot;)} 
{!REQUIRESCRIPT(&quot;/soap/ajax/25.0/apex.js&quot;)} 

//Check if Opportunity has a Pricebook 
var connection = sforce.connection; 
var result = sforce.connection.query(&quot;SELECT Id, Pricebook2Id FROM Opportunity WHERE Id=&apos;{!Opportunity.Id}&apos;&quot;); 
var opp= result.getArray(&quot;records&quot;); 
//alert( opp[0][&apos;Pricebook2Id&apos;] );

//Construct VF URL
var copyBundleItemsToOpportunity = &apos;/apex/sfcloud__ProductBundle_Add?id={!Opportunity.Id}&amp;retURL={!Opportunity.Id}&apos;;

if( opp[0][&apos;Pricebook2Id&apos;] ) {
   window.top.location.href = copyBundleItemsToOpportunity;
} 
else {
   //Redirect to choose pricebook page
   window.top.location.href = &apos;/oppitm/choosepricebook.jsp?id={!Opportunity.Id}&amp;retURL=&apos; +copyBundleItemsToOpportunity;
}</url>
